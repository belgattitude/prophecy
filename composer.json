{
    "name":         "phpspec/prophecy",
    "description":  "Highly opinionated mocking framework for PHP 5.3+",
    "keywords":     ["Mock", "Stub", "Dummy", "Double", "Fake", "Spy"],
    "homepage":     "https://github.com/phpspec/prophecy",
    "type":         "library",
    "license":      "MIT",
    "authors":      [
        {
            "name":      "Konstantin Kudryashov",
            "email":     "ever.zet@gmail.com",
            "homepage":  "http://everzet.com"
        },
        {
            "name":      "Marcello Duarte",
            "email":     "marcello.duarte@gmail.com"
        }
    ],

    "require": {
        "php":                               "^5.6|^7.0",
        "phpdocumentor/reflection-docblock": "^3.1|^4.0",
        "sebastian/comparator":              "^1.2|^2.0|^3.0",
        "doctrine/instantiator":             "^1.0.2",
        "sebastian/recursion-context":       "^2.0|^3.0"
    },

    "require-dev": {
        "phpspec/phpspec": "^3.0",
        "phpunit/phpunit": "^5.7|^6.5|^7.1|^8.0"
    },

    "autoload": {
        "psr-4": {
            "Prophecy\\": "src/Prophecy"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "Tests\\Prophecy\\": "tests",
            "Fixtures\\Prophecy\\": "fixtures"
        }
    },

    "scripts": {
        "test": [
            "@test:phpspec",
            "@test:phpunit"
        ],
        "qa": [
            "@phpstan"
        ],
        "test:phpunit": "vendor/bin/phpunit",
        "test:phpspec": "ph",
        "phpstan": "vendor/bin/phpstan analyse -c phpstan.neon src tests"
    },

    "extra": {
        "branch-alias": {
            "dev-master": "1.8.x-dev"
        }
    }
}
